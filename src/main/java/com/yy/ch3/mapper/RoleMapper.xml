<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yy.ch3.mapper.RoleMapper">
    <insert id="insertRole" parameterType="role">
        INSERT INTO t_role(role_name, note) VALUES (#{roleName}, #{note})
    </insert>

    <delete id="deleteRole" parameterType="long">
        DELETE FROM t_role WHERE id = #{id}
    </delete>

    <update id="updateRole" parameterType="role">
        UPDATE t_role SET role_name = #{roleName}, note = #{note} WHERE id = #{id}
    </update>

    <select id="getRole" parameterType="long" resultMap="role">
        SELECT id, role_name AS roleName, note FROM t_role WHERE id = #{id}
    </select>

    <select id="findRoles" parameterType="string" resultMap="role">
        SELECT id, role_name AS rolename, note FROM t_role WHERE role_name LIKE  concat('%', #{roleName}, '%')
    </select>
</mapper>